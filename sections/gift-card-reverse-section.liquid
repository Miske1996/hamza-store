{{ 'gift-card-reverse-section.css' |  asset_url |  stylesheet_tag }}
<div class="git_card_section" style="background-color: {{ section.settings.background  }};">
    <div class="gift_card_wrapper">
        <div class="main_gift_content" style="color: {{ section.settings.color_text }};">
            <h1 class="title_content" style="color: {{ section.settings.color_text }};">{{ section.settings.title }}
            </h1>
            <p class="paragraph" >{{ section.settings.paragraph }}</p>
            <a class="action_button_collection" href="{{ section.settings.collection_id.url }}">SEE THE SELECTION</a>
        </div>
        <div class="gift_image_container">
            <img src="{{ section.settings.image_gift |  image_url }}" alt="">
        </div>
       
    </div>
</div>
{% schema %}
    {
        "name": "Gift Card Reverse",
        "tag": "section",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Your gifts up to 20% off"
            },
            {
                "type": "collection",
                "id": "collection_id",
                "label": "Collection"
            },
            {
                "type":"image_picker",
                "id": "image_gift",
                "label": "Gift Card Image"
            },
            {
                "type": "richtext",
                "id": "paragraph",
                "label": "Paragraph"
            },
            {
                "type":"color",
                "id": "color_text",
                "label": "Text Color",
                "default": "#FFFFFF"
            },
            {
                "type":"color",
                "id": "background",
                "label": "Background Color",
                "default": "#4a7077"
            }
            ],
        "presets": [
            {
                "name": "Gift Card Reverse"
            }
        ]
    }
    {% endschema %}
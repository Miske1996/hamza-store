{{ 'badges-section.css' |  asset_url |  stylesheet_tag }}
<badge-section>
<div class="badges_section">
    {% for block in section.blocks %}
        <div class="badge_container">
        
        <img src="{{ block.settings.badge_image |  image_url  }}" alt="">
        <span class="badge_main_title">{{ block.settings.badge_title_id }}
            </span>
        <span class="badge_sub_title">{{ block.settings.badge_subtitle_id }}
        </span>
    </div> 
    {% endfor %}
</div>
</badge-section>
{% schema %}
{
    "name": "Badge",
    "settings": [
        
        ],
    "blocks": [
        {
            "name": "Badge",
            "type": "badge",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "badge_title_id",
                    "label": "Badge Title"
                },
                {
                    "type": "text",
                    "id": "badge_subtitle_id",
                    "label": "Badge Subtitle"
                },
                {
                    "type": "image_picker",
                    "id": "badge_image",
                    "label": "Badge Image"
                }

            ]
        }
    ]
}
{% endschema %}
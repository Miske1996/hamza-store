{{ 'about-us-cards-section.css' |  asset_url |  stylesheet_tag }}
<div class="about_us_cards_section">
    <div class="card_about_us">
        <img src="{{  section.settings.background_img_1 |  image_url }}" alt="">
        <div class="main_content">
            <h1 class="title_content">{{  section.settings.title_card_1 }}
            </h1>
            <p class="paragraph">{{  section.settings.sub_title_1 }}</p>
            <a class="action_button_collection" href="{{ section.settings.button_url_1 }}">DISCOVER</a>
        </div>
    </div>
    <div class="card_about_us" style="margin-top: 10vh;">
        <img src="{{  section.settings.background_img_2 |  image_url }}" alt="">
        <div class="main_content">
            <h1 class="title_content">{{  section.settings.title_card_2 }}
            </h1>
            <p class="paragraph">{{  section.settings.sub_title_2 }}</p>
            <a class="action_button_collection" href="{{ section.settings.button_url_2 }}">DISCOVER</a>
        </div>
    </div>
</div>
{% schema %}
{
    "name": "About Us Card",
    "settings": [
        {
            "type": "text",
            "id": "title_card_1",
            "label": "Title Card 1",
            "default": "Our Stores"
        },
        {
            "type": "text",
            "id": "sub_title_1",
            "label": "Sub Title Card 1",
            "default": "Nearest to your home"
        },
        {
            "type":"image_picker",
            "id": "background_img_1",
            "label": "Card 1 Background Image"
        },
        {
            "type": "url",
            "id": "button_url_1",
            "label": "Button's 1 Url"
        },
        {
            "type": "text",
            "id": "title_card_2",
            "label": "Title Card 2",
            "default": "Our Stores"
        },
        {
            "type": "text",
            "id": "sub_title_2",
            "label": "Sub Title Card 2",
            "default": "Nearest to your home"
        },
        {
            "type":"image_picker",
            "id": "background_img_2",
            "label": "Card Background Image 2"
        },
        {
            "type": "url",
            "id": "button_url_2",
            "label": "Button's 2 Url"
        }
        ],
        "presets": [
            {
                "name": "About Us Card"
            }
        ]
}
{% endschema %}
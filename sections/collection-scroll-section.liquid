{{ 'collection-scroll-section.css' |  asset_url |  stylesheet_tag }}
<collection-scroll>
<div class="collection_scroll_section">
    <div class="section_title">{{ section.settings.title }}</div>
    <div class="section_sub_title">{{ section.settings.subtitle }}</div>
    <div class="collections_list_scroll">
        {% for block in section.blocks %}
            <a class="collection_card">
                <img src="{{ block.settings.collection_id.featured_image |  image_url  }}" alt="">
                <span class="title_collection_card">{{ block.settings.collection_id.title }}</span>
            </a>
        {% endfor %}
    </div>
    <div class="scroll_arrows_container">
        <div class="left_arrow"><img src="{{ 'left_arrow_.png' |  asset_url }}" alt=""></div>
        <div class="right_arrow"><img src="{{ 'left_arrow_.png' |  asset_url }}" alt=""></div>
    </div>
</div>
</collection-scroll>
{% schema %}
{
    "name": "Collection Scroll",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "The benefits are real"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Sub Title",
            "default": "Transform your hair and Skin in just 4 nights!"
        }
        ],
        "blocks": [
            {
                "name": "Slide",
                "type": "CollectionSlide",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection_id",
                        "label": "Collection Slide"
                    }
                ]
            }
        ]
}
{% endschema %}